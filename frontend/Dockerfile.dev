FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json ./

# Install Angular CLI globally and dependencies
RUN npm install -g @angular/cli@17 && \
    npm install

# Copy config files
COPY angular.json tsconfig.json tailwind.config.js postcss.config.js proxy.conf.json ./

EXPOSE 4200

CMD ["npm", "start"]
